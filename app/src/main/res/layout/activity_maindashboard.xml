<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:background="#eaf4f4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/top_background_gradient" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="417dp"
                    android:layout_height="232dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/top_background" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="126dp"
                    android:layout_height="88dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView5"
                    app:srcCompat="@drawable/logo1" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Hello,"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView6" />
                <TextView
                    android:id="@+id/tvUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:text="User"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView6" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Welcome to AirScan"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="-47dp"
                android:background="@drawable/white_top_buttons"
                android:orientation="horizontal">

                <!-- Ảnh 1 -->

                <!-- Ảnh 2 -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="87dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_top_buttons"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon8_temperature" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="87dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_top_buttons"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon8_humidity" />

                <!-- Ảnh 3 -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="87dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_top_buttons"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon8_cloud" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Temperature"
                    android:textStyle="bold" />

                <!-- TextView 2 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Humidity"
                    android:textStyle="bold" />

                <!-- TextView 3 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="RainFall"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/temp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:text="20"
                    android:textColor="@color/pieRed"
                    android:textStyle="bold" />

                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/humi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:text="20"
                    android:textColor="@color/pieRed"
                    android:textStyle="bold" />

                <!-- TextView 3 -->
                <TextView
                    android:id="@+id/rainfall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:text="20"
                    android:textColor="@color/pieRed"
                    android:textStyle="bold" />
            </LinearLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/banner_background"
                tools:context=".YourActivity">

                <TextView
                    android:id="@+id/textlogodb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Thank you for choosing AirScan"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/logodb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textlogodb"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <!-- EditText Section -->

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_marginTop="40dp"
                    android:columnCount="3">

                    <!-- ImageButton 1 -->
                    <ImageButton
                        android:id="@+id/btnReport"
                        android:layout_width="0dp"
                        android:layout_height="61dp"
                        android:layout_columnWeight="1"
                        android:background="@android:color/transparent"
                        android:onClick="buttonClick4"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_4" />

                    <!-- ImageButton 2 -->
                    <ImageButton
                        android:id="@+id/btnDevice"
                        android:layout_width="0dp"
                        android:layout_height="59dp"
                        android:layout_columnWeight="1"
                        android:background="@android:color/transparent"
                        android:onClick="buttonClick5"
                        android:scaleType="fitCenter"
                        android:src="@drawable/weathericon" />

                    <!-- ImageButton 3 -->
                    <ImageButton
                        android:id="@+id/btnSetting"
                        android:layout_width="0dp"
                        android:layout_height="61dp"
                        android:layout_columnWeight="1"
                        android:background="@android:color/transparent"
                        android:onClick="buttonClick6"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_7" />
                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <!-- TextView 1 -->
                    <TextView
                        android:id="@+id/tvReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Reports"
                        android:textStyle="bold" />

                    <!-- TextView 2 -->
                    <TextView
                        android:id="@+id/tvDevice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Weather asset"
                        android:textStyle="bold" />

                    <!-- TextView 3 -->
                    <TextView
                        android:id="@+id/tvSetting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Setting"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- ImageButton Section -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <!-- EditText Section -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:columnCount="3">

                    <!-- ImageButton 1 -->
                    <ImageButton
                        android:id="@+id/lightassettv"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_columnWeight="1"
                        android:background="@android:color/transparent"
                        android:onClick="buttonClick1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lightasset" />

                    <!-- ImageButton 2 -->
                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_columnWeight="1"
                        android:background="@android:color/transparent"
                        android:onClick="buttonClick2"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_2" />

                    <!-- ImageButton 3 -->
                    <ImageButton
                        android:id="@+id/graphbtn"
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:layout_columnWeight="1"
                        android:background="@android:color/transparent"
                        android:onClick="buttonClick3"
                        android:scaleType="fitCenter"
                        android:src="@drawable/database" />
                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <!-- TextView 1 -->
                    <TextView
                        android:id="@+id/lightassettv1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Light assset"
                        android:textStyle="bold" />

                    <!-- TextView 2 -->
                    <TextView
                        android:id="@+id/tvMap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Maps"
                        android:textStyle="bold" />

                    <!-- TextView 3 -->
                    <TextView
                        android:id="@+id/graphtv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Database"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- ImageButton Section -->
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>